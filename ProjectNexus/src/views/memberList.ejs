<!DOCTYPE html>
<html lang="en">
<%- include('partials/head.ejs') %>

<body class="font-inter">
    <%- include('partials/leftNavigation.ejs')%>
    <main id="main-content" 
          class="relative left-60 w-[calc(100%-15rem)] bg-mainBg h-screen
          p-6 break-words phone:left-0 phone:w-full overflow-y-auto">
        <div id="content-wrapper">
            <!-- Content goes here -->
            <div class="flex justify-center">
                <%- include('partials/message-errors.ejs') %>
            </div>
            <div class="flex justify-end">
                <img class="w-20" src="/images/dh_logo.png" alt="">
                </a>
            </div>

            <div class="flex mb-12">
                <a href="/members/create" 
                    class="rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm  focus-visible:outline">Create Member</a>
            </div>

            <div class="flex gap-5 items-center justify-between mb-12" >
                    <h1 class="font-semibold text-2xl">Team members</h1>
                    <!--Search Bar-->
                    
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                            <i class='bx bx-search'></i>
                        </div>
                        <input type="text" 
                            class="block phone:pl-10 laptop:pl-10 desktop:pl-10 desktop:p-2 laptop:p-2 phone:p-1 w-full phone:text-[0.8rem] tablet:p-1 tablet:text-[0.8rem] tablet:pl-10 bg-zinc-50 focus:outline focus:outline-slate-600 focus:duration-200 focus:outline-2 shadow-md rounded-lg"
                            placeholder="Search Member"  oninput="search(this.value)">
                    </div>
            </div>

            <div>
                <table>
                    <thead>
                        <tr>
                            <th class="pr-80 pb-4 phone:pr-16">Member</th>
                            <th class="pb-4">Development Team</th>
                        </tr>
                    </thead>
                    <tbody id="member-table">
                        <% members.forEach(member=>{
                            if (member.team == "FE"){%>
                                <tr class="h-20 border-b-2 border-white">
                                    <td class="flex">
                                        <span class= "max-w-[12rem] overflow-hidden break-words phone:max-w-[8rem]">
                                            <%= member.member_name%>
                                        </span>
                                    </td>
                                    <td>
                                        <span class="p-2 bg-members-bg-green rounded-lg text-members-text-green">
                                            Frontend
                                        </span>
                                    </td>
                                </tr>
                            <%}
                            else{ %>
                                <tr class="h-20 border-b-2 border-white">
                                    <td class="flex">
                                        <span class= "max-w-[12rem] overflow-hidden break-words phone:max-w-[8rem]">
                                            <%= member.member_name%>
                                        </span>
                                    </td>
                                    <td>
                                        <span class="p-2 bg-members-bg-yellow rounded-lg text-members-text-yellow">
                                            Backend
                                        </span>
                                    </td>
                                </tr>
                            <%}
                        }) %>
                        
                    </tbody>
                </table>
            </div>

            
            


        </div>
    </main>
    <div id="dark-separator" class="fixed top-0 bottom-0 w-screen h-screen bg-black opacity-20 invisible"></div>
    <!-- <script defer src="scripts/index.min.js" type="text/javascript"></script> -->
    <script defer src="/scripts/index.js"></script>
    <script defer src="/scripts/searchMember.js"></script>
</body>
</html>
