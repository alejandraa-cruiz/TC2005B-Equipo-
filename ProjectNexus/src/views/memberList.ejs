<!DOCTYPE html>
<html lang="en">
<%- include('partials/head.ejs') %>

<body class="font-inter">
    <%- include('partials/leftNavigation.ejs')%>
    <main id="main-content" 
          class="relative left-60 w-[calc(100%-15rem)] bg-mainBg h-screen
          p-6 break-words phone:left-0 phone:w-full overflow-y-auto">
        <div id="content-wrapper">
            <!-- Content goes here -->
            <div class="flex justify-center">
                <%- include('partials/message-errors.ejs') %>
            </div>
            <div class="flex justify-end">
                <img class="w-20" src="/images/dh_logo.png" alt="">
                </a>
            </div>
            <div class="flex gap-5 items-center justify-between mb-12" >
                    <h1 class="font-semibold text-2xl">Team members</h1>
                    <!--Search Bar-->
            </div>

            <div class="flex flex-row mb-12 justify-start w-full">
                <div class=" flex justify-start w-1/4">
                    <a href="/members/create" 
                    class="rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm  focus-visible:outline">Create Member</a>
                </div>
                <div class=" flex w-full justify-center">
                    <div class="relative flex justify-start w-2/4">
                        <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none w-2/4">
                            <i class='bx bx-search'></i>
                        </div>
                        <input type="text"
                            class="block phone:pl-10 laptop:pl-10 desktop:pl-10 desktop:p-2 laptop:p-2 phone:p-1 w-full phone:text-[0.8rem] tablet:p-1 tablet:text-[0.8rem] tablet:pl-10 bg-zinc-50 focus:outline focus:outline-slate-600 focus:duration-200 focus:outline-2 shadow-md rounded-lg"
                            placeholder="Search Member" oninput="search(this.value)">
                    </div>
                </div>
            </div>
            
            <div>
                <table>
                    <thead>
                        <tr>
                            <th class="pr-40 pb-4 phone:pr-16">Member</th>
                            <th class="pb-4 pr-40 phone:pr-16">Development Team</th>
                            <th class="pb-4 pr-40">Modify Member</th>
                            <th class="pb-4">Delete Member</th>
                        </tr>
                    </thead>
                    <tbody id="member-table">
                        <% members.forEach((member, index)=>{ %>
                            <%- include('partials/cancel-popup-member.ejs', {member: member, popupId: index}) %>
                            <% if (member.team == "FE"){%>
                                <tr class="h-20 border-b-2 border-white">
                                    <td class="flex">
                                        <span class= "pt-6 max-w-[12rem] overflow-hidden break-words phone:max-w-[8rem]">
                                            <%= member.member_name%>
                                        </span>
                                    </td>
                                    <td>
                                        <span class="ml-7 p-2 bg-members-bg-green rounded-lg text-members-text-green items-center">
                                            Frontend
                                        </span>
                                    </td>
                                    <td>
                                        <button onclick="location.href = '/members/modify/<%=member.id_team_member%>'" class= "ml-11 flex flex-row justify-center break-words hover:bg-red-500 rounded-lg p-[0.20rem] hover:cursor-pointer  text-zinc-900 duration-200">
