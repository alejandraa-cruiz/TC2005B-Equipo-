<html lang="en">
<%- include('partials/head.ejs') %>
    <body class="font-inter">
        <%- include('partials/leftNavigation.ejs') %>
            <main id="main-content"
                class="relative left-60 w-[calc(100%-15rem)] bg-mainBg h-screen
                    p-6 break-words phone:left-0 phone:w-full overflow-y-scroll overflow-x-hidden">
                <div id="content-wrapper">
                    <div class="flex justify-center">
                        <%- include('partials/message-errors.ejs') %>
                    </div>
                    <div id="first-wrapper relative">
                        <div class="flex justify-end">
                            <img class="w-20" src="/images/dh_logo.png" alt="">
                        </div>
                        <div class="flex flex-row mt-4 w-full mx-auto">
                            <div class="flex flex-row justify-center text-center w-3/12 ml-5 phone:w-full phone:text-center tablet:w-full tablet:text-center">
                                <div class="w-full">
                                    <p class="phone:text-[1.2rem] laptop:text-[2rem] desktop:text-[1.7rem] font-semibold">All projects</p>
                                </div>
                            </div>
                        </div>
                        <div class="desktop:flex desktop:flex-row phone:flex phone:flex-col p-5 mt-3 phone:w-full desktop:w-full mx-auto tablet:flex tablet:flex-col tablet:w-full tablet:justify-center">
                            <div class="desktop:flex desktop:flex-row desktop:justify-center w-3/12 desktop:ml-5 phone:flex phone:ml-3 phone:w-full phone:justify-center tablet:flex tablet:w-full tablet:justify-center tablet:mb-4 tablet:ml-2">
                                <button type="button" class=" shadow-lg w-[8.5rem] h-[2.6rem] bg-accent-1 
                                                                    text-white rounded-[5px] phone:w-[6rem] phone:h-[2.2rem] tablet:w-[6rem] tablet:h-[2.25rem] text-sm hover:bg-white hover:text-red-500 duration-300">
                                    <a class="phone:text-[0.7rem] laptop:text-[0.9rem] desktop:text-[0.9rem] tablet:text-[0.8rem]" href="/project/">Create Project</a>
                                </button>
                            </div>
                            <div class="desktop:flex desktop:flex-row mx-auto desktop:w-10/12 desktop:justify-center phone:flex phone:flex-col phone:w-full phone:justify-center phone:mt-5 phone:space-y-5 tablet:space-y-4 tablet:flex tablet:flex-col tablet:w-full tablet:justify-center laptop:space-x-10">
                                <div class="desktop:w-5/12 laptop:w-5/12 phone:w-7/12 phone:ml-20 tablet:ml-20 tablet:w-7/12">
                                    <div class="relative">
                                        <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-search w-5 h-5"
                                                height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                                                stroke-linecap="round" stroke-linejoin="round">
                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                <path d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0"></path>
                                                <path d="M21 21l-6 -6"></path>
                                            </svg>
                                        </div>
                                        <input type="text"
                                            class="block phone:pl-10 laptop:pl-10 desktop:pl-10 desktop:p-2 laptop:p-2 phone:p-1 w-full phone:text-[0.8rem] tablet:p-1 tablet:text-[0.8rem] tablet:pl-10 bg-zinc-50 focus:outline focus:outline-slate-600 focus:duration-200 focus:outline-2 shadow-md rounded-lg"
                                            placeholder="Search Project" oninput="searchProject(this.value, '<%=startIndex%>', '<%=endIndex%>')">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="flex flex-row w-full appearance-none items-center select-none mb-5 mt-[1.75rem] phone:mt-[0.5rem]" id="project-list">
                        <div class="w-1/5 h-[3rem] content-center">
                            <div class="flex flex-row justify-center w-full mx-auto items-center text-center phone:pl-2 laptop:pl-12 desktop:pl-12">
                                <p class="text-center font-medium phone:text-[0.9rem] tablet:text-[1rem] laptop:text-[1.250rem] desktop:text-[1.250rem]">
                                    Project Title
                                </p>
                            </div>
                        </div>
                        <div class="w-1/5 h-[3rem]">
                            <div class="flex flex-row justify-center w-full mx-auto items-center">
                                <div class="flex flex-row justify-center w-full mx-auto items-center text-center phone:pl-2">
                                    <p class="justify-self-center text-center break-words font-medium phone:text-[0.9rem] laptop:text-[1.250rem] desktop:text-[1.250rem]">
                                        Team Members
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="w-1/5 h-[3rem] items-center text-center">
                            <div class="flex flex-row justify-center w-full mx-auto items-center content-center justify-self-center">
                                <div class="text-center">
                                    <p class="justify-self-center text-center break-words font-medium phone:text-[0.9rem] laptop:text-[1.250rem] desktop:text-[1.250rem]">
                                        Add Member
                                    </p>
                                </div>
                            </div>
                        </div>
                
                        <div class="w-1/5 h-[3rem] items-center text-center">
                            <div class="flex flex-row justify-center w-full mx-auto items-center content-center justify-self-center">
                                <div class="text-center">
                                    <p class="justify-self-center text-center break-words font-medium phone:text-[0.9rem] laptop:text-[1.250rem] desktop:text-[1.250rem]">
                                        Modify Project
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="w-1/5 h-[3rem] items-center text-center">
                            <div class="flex flex-row justify-center w-full mx-auto items-center content-center justify-self-center">
                                <div class="text-center">
                                    <p class="justify-self-center text-center break-words font-medium phone:text-[0.9rem] laptop:text-[1.250rem] desktop:text-[1.250rem]">
                                        Delete Project
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="containerList" class="relative">
                            <% sliceProjects.forEach((project, index) => { %>
                                <%- include('partials/cancel-popup.ejs', {project: project, popupId : index}); %>
                                <%- include('partials/popUpAddMember.ejs', {project: project, popupId : index}); %>
                            <div class="flex flex-row w-full appearance-none select-none mb-[1.5rem] mt-[1.5rem]">
                                <div class="w-1/5 flex flex-row justify-center">
                                    <div class="flex flex-row justify-center w-9/12 items-center text-center laptop:pl-12 phone:pl-0">
                                        <p id="project_name" class="text-center select-text phone:text-[0.60rem] tablet:text-[0.65rem] laptop:text-[1.2rem] desktop:text-[1rem]">
                                            <%= project.project_name; %>
                                        </p>
                                    </div>
                                </div>
                                <div class="w-1/5 flex flex-row justify-center">
                                    <div class="flex flex-row justify-center laptop:w-3/5 desktop:3/5 tablet:w-10/12 items-center">
                                        <% if(project.count_team_members > 0){ %>
                                            <div class="desktop:w-8/12 laptop:w-8/12 w-full bg-members-bg-green rounded-lg break-words text-teal-800 tablet:p-[0.125rem] p-[0.150rem]">
                                                <p class="justify-self-center text-center break-words select-text phone:text-[0.60rem] tablet:text-[0.65rem] laptop:text-[1.250rem] desktop:text-[1rem]">
                                                    <%= project.count_team_members; %> Members
                                                </p>
                                            </div>
                                            <div class="break-words hover:bg-members-bg-green rounded-lg p-[0.150rem] hover:cursor-pointer text-teal-800 duration-200">
                                                <button>
                                                    <svg class="phone:w-[1.1rem] phone:h-[1.1rem] tablet:w-[1rem] tablet:h-[1rem] laptop:w-[1.6rem] laptop:h-[1.6rem] desktop:w-[1.55rem] desktop:h-[1.55rem] icon icon-tabler icon-tabler-user-edit"
                                                        xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                                                        stroke-linecap="round" stroke-linejoin="round">
                                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                        <path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0"></path>
                                                        <path d="M6 21v-2a4 4 0 0 1 4 -4h3.5"></path>
                                                        <path d="M18.42 15.61a2.1 2.1 0 0 1 2.97 2.97l-3.39 3.42h-3v-3l3.42 -3.39z"></path>
                                                    </svg>
                                                </button>
                                            </div>
                                        <% }else{ %>
                                            <div class="desktop:w-8/12 laptop:w-8/12 w-full bg-members-bg-red rounded-lg break-words text-zinc-200 tablet:p-[0.125rem] p-[0.150rem]">
                                                <p class="justify-self-center text-center break-words select-text phone:text-[0.60rem] tablet:text-[0.65rem] laptop:text-[1.250rem] desktop:text-[1rem]">
                                                    <%= project.count_team_members; %> Members
                                                </p>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                                <div class="w-1/5 flex flex-row justify-center content-center">
                                    <div class="flex flex-row w-full justify-center content-center items-center">
                                        <div class= "hover:bg-members-bg-green rounded-lg p-[0.20rem] hover:cursor-pointer duration-200">
                                            <button onclick="openPopupMember('<%=index%>', '<%=project.id_project%>', event)" class="focus:bg-members-bg-green_web_aim focus:text-zinc-100 focus:rounded-lg">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-user-plus phone:w-[1.1rem] phone:h-[1.1rem] tablet:w-[1rem] tablet:h-[1rem] justify-self-center laptop:w-[1.6rem] laptop:h-[1.6rem] desktop:w-[1.55rem] desktop:h-[1.55rem]"
                                                viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round"
                                                stroke-linejoin="round">
                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                <path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0"></path>
                                                <path d="M16 19h6"></path>
                                                <path d="M19 16v6"></path>
                                                <path d="M6 21v-2a4 4 0 0 1 4 -4h4"></path>
                                            </svg>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="w-1/5 flex flex-row justify-center content-center items-center">
                                    <div class= "flex flex-row justify-center break-words hover:bg-members-bg-red rounded-lg p-[0.20rem] hover:cursor-pointer  text-zinc-900 duration-200">
                                        <button onclick="location.href = '/project/modify/<%=project.id_project%>'">
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-pencil-square phone:w-[1.1rem] phone:h-[1.1rem] tablet:w-[1rem] tablet:h-[1rem] laptop:w-[1.6rem] laptop:h-[1.6rem] desktop:w-[1.55rem] desktop:h-[1.55rem] hover:text-zinc-100"
                                                viewBox="0 0 16 16">
                                                <path
                                                    d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                                <path fill-rule="evenodd"
                                                    d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                            </svg>
                                        </button>
                                    </div>
                                </div>
                                <div class="w-1/5 flex flex-row justify-center content-center items-center">
                                    <div class= "flex flex-row justify-center break-words hover:bg-members-bg-red rounded-lg p-[0.20rem] hover:cursor-pointer text-zinc-900 duration-200">
                                        <button onclick="openPopup('<%=index%>', event)" class="focus:bg-members-bg-red focus:text-zinc-100 focus:rounded-lg">
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-trash phone:w-[1.1rem] phone:h-[1.1rem] tablet:w-[1rem] tablet:h-[1rem] laptop:w-[1.6rem] laptop:h-[1.6rem] desktop:w-[1.55rem] desktop:h-[1.55rem] hover:text-zinc-100"
                                            viewBox="0 0 16 16">
                                            <path
                                            d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                            <path fill-rule="evenodd"
                                            d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                            </svg>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="h-1 bg-slate-50"></div>
                            <% }); %>
                        </div>
                    </div>
                    <nav id="Pagination" aria-label="Page navigation" class="fixed flex flex-row justify-center
                     desktop:laptop:bottom-10 desktop:laptop:left-36 desktop:laptop:right-0
                     tablet:phone:top-8 tablet:phone:left-1/2">
                        <ul id="ul-pagination" class="inline-flex shadow-lg space-x-2">
                            <% for( let i = 0; i < totalPages; i++){%>
                                <li>
                                    <button onclick="getProjects('<%= i %>', event)">
                                        <a
                                        class="rounded-lg leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700 
                                                desktop:laptop:px-3 desktop:laptop:py-2 tablet:phone:px-2"> <%= i+1 %></a>
                                    </button>
                                </li>
                            <% } %>
                        </ul>
                    </nav>
                </main>
                        <div id="dark-separator" class="fixed top-0 bottom-0 w-screen h-screen bg-black opacity-20 invisible"></div>
                        <script defer src="/scripts/projectSearchBar.js"></script>
                        <script defer src="/scripts/popUp.js"></script>
                        <script defer src="/scripts/listProjects.js"></script>
        </body>
</html>
